# ============================================================================
# Frontend Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
# Backend API URL
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable/disable context file upload feature
NEXT_PUBLIC_ENABLE_CONTEXT_FILES=true

# Enable/disable template upload feature
NEXT_PUBLIC_ENABLE_TEMPLATES=true

# Enable/disable PPTX export
NEXT_PUBLIC_ENABLE_EXPORT=true

# ----------------------------------------------------------------------------
# UI Configuration
# ----------------------------------------------------------------------------
# Application title
NEXT_PUBLIC_APP_TITLE=Presentation App

# Maximum number of slides to display in grid
NEXT_PUBLIC_MAX_SLIDES_DISPLAY=50

# Default slide layout (single, two-column, title-only)
NEXT_PUBLIC_DEFAULT_LAYOUT=single

# ----------------------------------------------------------------------------
# Development Configuration
# ----------------------------------------------------------------------------
# Enable development tools and debugging
NEXT_PUBLIC_DEV_MODE=true

# Show detailed error messages
NEXT_PUBLIC_SHOW_ERRORS=true

# ----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# ----------------------------------------------------------------------------
# Google Analytics ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# ----------------------------------------------------------------------------
# Build Configuration (Internal - not for end users)
# ----------------------------------------------------------------------------
# These are used during build time and typically don't need to be changed

# Enable Next.js strict mode
# NEXT_PUBLIC_STRICT_MODE=true

# Output standalone build
# OUTPUT_STANDALONE=true
