# ============================================================================
# Backend Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ----------------------------------------------------------------------------
# Anthropic API Configuration
# ----------------------------------------------------------------------------
# Required: Your Anthropic API key for Claude AI models
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Override default Claude model (default: claude-sonnet-4-20250514)
# Available models: claude-sonnet-4-20250514, claude-opus-4-20250514, etc.
# CLAUDE_MODEL=claude-sonnet-4-20250514

# ----------------------------------------------------------------------------
# LlamaCloud API Configuration
# ----------------------------------------------------------------------------
# Required: Your LlamaCloud API key for document parsing (if using context files)
# Get your key from: https://cloud.llamaindex.ai/
LLAMA_CLOUD_API_KEY=llx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
# Host to bind the server to
HOST=0.0.0.0

# Port for the backend API server
PORT=8000

# Environment mode (development, staging, production)
ENVIRONMENT=development

# Enable debug logging (true/false)
DEBUG=true

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------
# Allowed origins for CORS (comma-separated)
# For development: http://localhost:3000
# For production: https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ----------------------------------------------------------------------------
# Session Management
# ----------------------------------------------------------------------------
# Session timeout in hours (default: 24)
SESSION_TIMEOUT_HOURS=24

# Session cleanup interval in seconds (default: 3600 = 1 hour)
SESSION_CLEANUP_INTERVAL=3600

# Maximum number of concurrent sessions (default: 1000)
MAX_CONCURRENT_SESSIONS=1000

# ----------------------------------------------------------------------------
# File Upload Configuration
# ----------------------------------------------------------------------------
# Maximum file upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760

# Allowed file extensions for context files (comma-separated)
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.md,.pptx

# Temporary upload directory
TEMP_UPLOAD_DIR=./temp_uploads

# ----------------------------------------------------------------------------
# PPTX Converter Configuration
# ----------------------------------------------------------------------------
# Path to Node.js executable (leave empty for system default)
# NODE_PATH=/usr/bin/node

# Path to the PPTX converter directory
PPTX_CONVERTER_PATH=./pptx_converter

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
# LOG_FILE=./logs/app.log

# ----------------------------------------------------------------------------
# Rate Limiting (Optional - for production)
# ----------------------------------------------------------------------------
# Enable rate limiting (true/false)
# RATE_LIMIT_ENABLED=false

# Maximum requests per minute per IP
# RATE_LIMIT_PER_MINUTE=60

# ----------------------------------------------------------------------------
# Monitoring & Telemetry (Optional)
# ----------------------------------------------------------------------------
# Enable application monitoring
# MONITORING_ENABLED=false

# Sentry DSN for error tracking
# SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# Application version for tracking
# APP_VERSION=0.1.0
